{{- 'collection-heading.css' | asset_url | stylesheet_tag: preload: true -}}

<section class="collection-heading-wrapper">
  <h1 class="collection-title">
    {{ collection.title }}
  </h1>

  {% if collection.description != blank %}
    <div class="collection-description">
      {{ collection.description }}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Dynamic Heading",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Dynamic Heading"
    }
  ]
}
{% endschema %}
