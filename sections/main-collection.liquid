<script>
  function initVariantFilterToggle() {
    const toggleBtn = document.querySelector('[data-toggle-filter]');
    const panel = document.querySelector('[data-filter-panel]');

    if (toggleBtn && panel) {
      toggleBtn.addEventListener('click', function () {
        panel.classList.toggle('open');
      });
    }
  }

  // Run on full page load
  document.addEventListener('DOMContentLoaded', initVariantFilterToggle);

  // Run on Shopify section reload (dynamic)
  document.addEventListener('shopify:section:load', initVariantFilterToggle);
</script>